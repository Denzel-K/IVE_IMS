<script src="https://cdn.tailwindcss.com"></script>

<section class="skeleton">
  {{>sidebar}}

  <section class="parent_container">
    {{>dynamic_head}}

    <div class="dynamic_body">
      {{!-- Your sections and divs go here --}}

   <div class=" mx-auto p-4">
        <!-- User Data (Hidden) -->
        <div id="user-data" data-current-lab="Lab A" class="hidden"></div>

        <!-- Header -->
        <header class="bg-indigo-800 text-white p-4 rounded-lg mb-4">
            <h1 class="text-2xl font-bold">Equipment Sharing System</h1>
        </header>

        <!-- Available Equipment Section -->
        <section class="mb-8">
            <h2 class="text-xl font-semibold mb-4">Available Equipment</h2>
            <div id="available-equipment" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"></div>
        </section>

        <!-- Requests from Other Labs Section -->
        <section class="mb-8">
            <h2 class="text-xl font-semibold mb-4">Requests from Other Labs</h2>
            <div id="requests-from-labs" class="space-y-4"></div>
        </section>

        <!-- Post Request Button -->
        <button id="post-request-btn" class="bg-indigo-800 text-white px-4 py-2 rounded-lg hover:bg-indigo-900">Post Request</button>

        <!-- Post Request Modal -->
        <div id="post-request-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden">
            <div class="modal-content bg-white p-6 rounded-lg w-11/12 md:w-1/2 lg:w-1/3 mx-auto mt-20">
                <h3 class="text-xl font-semibold mb-4">Post Equipment Request</h3>
                <form id="post-request-form" class="w-full border-2 border-red ">
                    <!-- Lab Selection -->
                    <div class="mb-4 w-full">
                        <label for="select-lab" class="block text-sm font-medium text-gray-700">Select Lab</label>
                        <select id="select-lab" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg"></select>
                    </div>

                    <!-- Equipment Selection -->
                    <div id="equipment-section" class="mb-4 w-full">
                        <label for="select-equipment" class="block text-sm font-medium text-gray-700">Select Equipment</label>
                        <select id="select-equipment" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg"></select>
                    </div>

                    <!-- Item Selection -->
                    <div id="item-section" class="mb-4  w-full">
                        <label for="select-item" class="block text-sm font-medium text-gray-700">Select Item</label>
                        <select id="select-item" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg"></select>
                    </div>

                    <!-- Time Slot Selection -->
                    <div id="time-slot-section" class="mb-4  w-full">
                        <label for="select-time-slot" class="block text-sm font-medium text-gray-700">Select Time Slot</label>
                        <select id="select-time-slot" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg">
                            <option value="9:00 AM - 11:00 AM">9:00 AM - 11:00 AM</option>
                            <option value="1:00 PM - 3:00 PM">1:00 PM - 3:00 PM</option>
                            <option value="4:00 PM - 6:00 PM">4:00 PM - 6:00 PM</option>
                        </select>
                    </div>

                    <!-- Purpose Section -->
                    <div id="purpose-section" class="mb-4  w-full">
                        <label for="request-purpose" class="block text-sm font-medium text-gray-700">Purpose</label>
                        <textarea id="request-purpose" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg" rows="3"></textarea>
                    </div>

                    <!-- Submit Button -->
                    <div id="submit-btn" class=" w-full">
                        <button type="submit" class="bg-indigo-800 text-white px-4 py-2 rounded-lg hover:bg-indigo-900">Submit Request</button>
                    </div>
                </form>
                <button class="close-modal mt-4 bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600">Close</button>
            </div>
        </div>

        <!-- Equipment Details Modal -->
        <div id="equipment-details-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden">
            <div class="modal-content bg-white p-6 rounded-lg w-11/12 md:w-1/2 lg:w-1/3 mx-auto mt-20">
                <h3 class="text-xl font-semibold mb-4">Equipment Details</h3>
                <div id="equipment-details-content"></div>
                <button class="close-modal mt-4 bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600">Close</button>
            </div>
        </div>
    </div>
        </div>

  </section>
</section>

<script src="js/shared.js"></script>
<script src="js/mt_eq_sharing.js"></script>